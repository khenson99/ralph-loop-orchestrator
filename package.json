{
  "name": "ralph-loop-orchestrator",
  "version": "0.1.0",
  "description": "Ralph Loop orchestration service for Codex + Claude multi-agent delivery",
  "type": "module",
  "main": "dist/src/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/src/index.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "labels:sync": "tsx scripts/install-labels.ts",
    "github:policies": "bash scripts/configure-github-policies.sh --owner $GITHUB_TARGET_OWNER --repo $GITHUB_TARGET_REPO --branch $GITHUB_BASE_BRANCH --checks \"$REQUIRED_CHECKS\"",
    "ralph:init": "bash scripts/init.sh",
    "ralph:planner": "bash scripts/run-planner.sh",
    "ralph:team": "bash scripts/run-team.sh",
    "ralph:reviewer": "bash scripts/run-reviewer.sh",
    "ralph:all": "bash scripts/run-all.sh",
    "ralph:validate-state": "tsx scripts/validate-state.ts"
  },
  "keywords": [
    "ralph-loop",
    "orchestrator",
    "codex",
    "claude",
    "github"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@fastify/env": "^5.0.3",
    "@fastify/sensible": "^6.0.4",
    "@octokit/auth-app": "^8.2.0",
    "@octokit/rest": "^22.0.1",
    "@octokit/webhooks": "^14.2.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/resources": "^2.5.0",
    "@opentelemetry/sdk-node": "^0.211.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "ajv": "^8.17.1",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.7.4",
    "js-yaml": "^4.1.1",
    "openai": "^6.21.0",
    "pg": "^8.18.0",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
